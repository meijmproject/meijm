<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		
	</form-beans>
	<action-mappings>
		<!--选择人员-->
		<action path="/goToSelectPerson"
				type="com.yh.hr.select.person.web.action.PersonSelectAction"
				scope="request"
				parameter="method" >
			<description>跳转到选择人员页面</description>
			<forward name="success" path="/hrworktop/selectperson/select_person.jsp" />
		</action>
		<action path="/goToSelectGoOutPerson"
				type="com.yh.hr.select.person.web.action.PersonSelectAction"
				scope="request"
				parameter="method" >
			<description>跳转到选择普通外出记录页面</description>
			<forward name="success" path="/hrworktop/selectgooutperson/select_goout_person.jsp" />
		</action>
		<!--选择人员-->
		<action path="/listSelectPerson"
				type="com.yh.hr.select.person.web.action.PersonSelectAction"
				scope="request"
				parameter="method" >
			<description>查询人员列表</description>
		</action>
		
		<action path="/createTask"
				type="com.yh.hr.select.person.web.action.PersonSelectAction"
				scope="request"
				parameter="method" >
			<description>跳转到选择人员页面</description>
		</action>
	</action-mappings>
</struts-config>
